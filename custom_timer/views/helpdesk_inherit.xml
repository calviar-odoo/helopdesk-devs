<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="ticket_view_form_inherit">
            <field name="name">helpdesk.ticket.form.inherit</field>
            <field name="model">helpdesk.ticket</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='tag_ids']" position="replace">
                    <field name="canal_type"/>
                </xpath>
                <xpath expr="//field[@name='email_cc']" position="after">
                    <field name="alias_ticket" placeholder="Ente"/>
                    <field name="clasificacion_ticket" placeholder="Servicio"/>
                    <field name="subclasificacion_ticket" placeholder="Requerimiento"/>
                    <field name="solucion" placeholder="Solucion"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>